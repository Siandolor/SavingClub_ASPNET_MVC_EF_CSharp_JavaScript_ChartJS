@model SavingsClub.Models.Payment

@{
    // =========================================================================
    // VIEW: Payments / Create or Edit
    // PROJECT: SavingsClub
    // =========================================================================
    // Displays the payment creation or editing form.
    // Allows users to select a member, define transaction type (income/expense),
    // enter the amount, description, and date. Supports both create and edit modes.
    // =========================================================================

    bool editing = Model.Id != 0;
    ViewData["Title"] = editing ? "Edit Payment" : "New Payment";
}

<h2>@ViewData["Title"]</h2>

<!-- ================================================================ -->
<!-- PAYMENT FORM -->
<!-- ================================================================ -->
<form asp-action="@(editing ? "Edit" : "Create")" method="post">

    @* Hidden field only shown when editing an existing record *@
    @if (editing)
    {
        <input type="hidden" asp-for="Id" />
    }

    <!-- ================================================================ -->
    <!-- MEMBER SELECTION -->
    <!-- ================================================================ -->
    <div class="mb-3">
        <label asp-for="MemberId" class="form-label"></label>
        <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId"></select>
        <span asp-validation-for="MemberId" class="text-danger"></span>
    </div>

    <!-- ================================================================ -->
    <!-- TRANSACTION TYPE -->
    <!-- ================================================================ -->
    <div class="mb-3">
        <label class="form-label">Type</label>

        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="IsIncome" value="true" checked />
            <label class="form-check-label">Income</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="IsIncome" value="false" />
            <label class="form-check-label">Expense</label>
        </div>
    </div>

    <!-- ================================================================ -->
    <!-- AMOUNT INPUT -->
    <!-- ================================================================ -->
    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <!-- ================================================================ -->
    <!-- DESCRIPTION INPUT -->
    <!-- ================================================================ -->
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" maxlength="50" />
        <div class="form-text">Maximum of 50 characters.</div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- ================================================================ -->
    <!-- DATE INPUT -->
    <!-- ================================================================ -->
    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" type="date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <!-- ================================================================ -->
    <!-- ACTION BUTTONS -->
    <!-- ================================================================ -->
    <button class="btn btn-primary" type="submit">Save</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<!-- ================================================================ -->
<!-- VALIDATION SCRIPTS -->
<!-- ================================================================ -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

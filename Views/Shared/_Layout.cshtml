@* =============================================================================
   FILE: _Layout.cshtml
   PROJECT: SavingsClub
   =============================================================================
   Defines the global HTML structure, navigation, and scripts shared across all
   pages. Includes Bootstrap styling, navigation links to all main sections, and
   script imports for jQuery and Bootstrap functionality.
   ============================================================================= *@

<!DOCTYPE html>
<html lang="en">
<head>
    @* -------------------------------------------------------------------------
       META & TITLE
       -------------------------------------------------------------------------
       Defines responsive viewport, UTF-8 encoding, and dynamic page titles.
       ------------------------------------------------------------------------- *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SavingsClub</title>

    @* -------------------------------------------------------------------------
       STYLESHEETS
       -------------------------------------------------------------------------
       Includes Bootstrap, the main site CSS, and auto-versioned build styles.
       ------------------------------------------------------------------------- *@
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SavingsClub.styles.css" asp-append-version="true" />
</head>

<body>
    <!-- ================================================================ -->
    <!-- HEADER & NAVIGATION -->
    <!-- ================================================================ -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SavingsClub</a>

                <!-- Responsive hamburger button for smaller screens -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Members" asp-action="Index">Members</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Payments" asp-action="Index">Payments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Stats" asp-action="Index">Statistics</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ================================================================ -->
    <!-- MAIN CONTENT CONTAINER -->
    <!-- ================================================================ -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ================================================================ -->
    <!-- FOOTER -->
    <!-- ================================================================ -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SavingsClub
        </div>
    </footer>

    <!-- ================================================================ -->
    <!-- SCRIPTS -->
    <!-- ================================================================ -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Optional section for page-specific scripts *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
